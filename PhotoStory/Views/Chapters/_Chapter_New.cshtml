@model PhotoStory.Models.Chapters.Chapter

@{
	Layout = "~/Views/Shared/Bootstrap/_CollapsiblePanel.cshtml";
}


	<h3 class="chapter-title">Chapter (x)<span data-bind="visible: !!ChapterName()">: </span><span data-bind="text: ChapterName"></span></h3>

	<div class="element-group">
        <input type="text" class="form-control" placeholder="Chapter name" data-bind="value: ChapterName, valueUpdate: 'afterkeydown'" />
        <input data-bind="element: FileInputElement" type="file" multiple="true" class="file-loading" />
        @Html.DataBoundTextAreaFor(m => m.Blog, "value: Blog", new { style = "height: 75px", @class = "form-control" })
	</div>

	<div class="pull-right-group">
		<input type="button" class="btn btn-danger" value="Discard" />
		<input type="button" class="btn btn-warning" value="Save Draft" data-bind="click: saveDraft" />
		<input type="button" class="btn btn-success" value="Publish" />
	</div>

@section expandTitle {
	<a>Start your next chapter...</a>
}

@section elementObservableName {CollapsiblePanelElement}